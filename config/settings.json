{
  "application": "VrindaAI",
  "version": "2.0",
  "description": "Autonomous AI Content Creator",
  
  "paths": {
    "blender": "C:/Program Files/Blender Foundation/Blender 4.3/blender.exe",
    "unreal": "C:/Program Files/Epic Games/UE_5.3",
    "davinci": "C:/Program Files/Blackmagic Design/DaVinci Resolve",
    "output": "./output",
    "templates": "./master_templates",
    "assets": "./assets"
  },
  
  "llm": {
    "provider": "llama.cpp",
    "host": "127.0.0.1",
    "port": 8080,
    "model": "mistral.gguf",
    "temperature": 0.7,
    "max_tokens": 2048
  },
  
  "rendering": {
    "default_quality": "high",
    "default_resolution": "1080p",
    "default_fps": 24,
    "gpu_enabled": true,
    "max_samples": 256
  },
  
  "video": {
    "codec": "h264",
    "bitrate": "10000k",
    "format": "mp4",
    "color_space": "rec709"
  },
  
  "execution": {
    "max_parallel_jobs": 2,
    "timeout_seconds": 3600,
    "retry_failed": true,
    "max_retries": 2,
    "continue_on_error": false
  },
  
  "logging": {
    "level": "INFO",
    "file": "./output/logs/vrindaai.log",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  }
}
